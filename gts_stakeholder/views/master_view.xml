<odoo>

    <!--************************ Project Role *************************-->

    <record id="view_project_role_form" model="ir.ui.view">
        <field name="name">project.role.form.view</field>
        <field name="model">project.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_role_tree" model="ir.ui.view">
        <field name="name">project.role.tree.view</field>
        <field name="model">project.role</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_project_role_view" model="ir.actions.act_window">
        <field name="name">Role</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.role</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Project Role
            </p>
        </field>
    </record>

    <menuitem action="action_project_role_view"
              id="menu_project_role"
              name="Role"
              parent="project.menu_project_config"
              sequence="10"/>

